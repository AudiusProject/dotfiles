[include]
  path = ~/.gitconfig-local

[push]
  default = simple

[alias]
  a = add
  ai = add --interactive

  c = commit
  cm = commit -m
  cam = commit -a -m
  ca = commit --amend # prompt for message
  cac = commit --amend -C HEAD # do not prompt for message

  rs = reset
  rsh = reset --hard

  rb = rebase
  rbi = rebase --interactive

  s = status
  d = diff
  co = checkout
  cl = clone
  b = branch
  l = log

  f = fetch
  ps = push
  pl = pull
  plr = pull --rebase
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
